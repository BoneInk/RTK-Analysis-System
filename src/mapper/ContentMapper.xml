<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.ncu.RTKanaly.dao.ContentDao">
    <resultMap id="result_map" type="bookstore.entity.Book">
        <result column="name" property="name"></result>
        <result column="txt_name" property="txt_name"></result>
        <result column="txt_content" property="txt_name"></result>
        <result column="result" property="result"></result>
    </resultMap>
    <select id="findContentByName" resultMap="result_map">
        SELECT txt_name,txt_content,result
        from content
        where name=#{id,jdbcType=VARCHAR}
    </select>
    <insert id="insertContent">
        INSERT name,txt_name,txt_content,result
        into content
    </insert>
</mapper>